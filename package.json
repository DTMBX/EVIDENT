{
  "name": "evident-monorepo",
  "version": "0.8.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:all": "npm run build && npm -ws --if-present run build",
    "test:all": "npm -ws --if-present test",
    "verify": "powershell -ExecutionPolicy Bypass -File ./federation-verify.ps1",
    "verify:pages": "node scripts/pages-verify.js",
    "lint": "npm run lint:css && npm run format:check:site",
    "lint:css": "node ./scripts/run-stylelint.js",
    "format": "prettier --write \"**/*.{css,html,md,js,ts,tsx,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{css,html,md,js,ts,tsx,jsx,json}\"",
    "format:check:site": "prettier --check \"src/**/*.{css,html,md,js,json}\" \"README.md\" \"package.json\"",
    "format:all": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/style.ps1",
    "lint:js": "eslint . --ext .js,.ts,.jsx,.tsx || true",
    "lint:prettier": "prettier --check \"**/*.{css,html,md,js,ts,tsx,jsx,json}\"",
    "test": "node -e \"console.log('No JS tests configured.');\"",
    "build:images": "node ./scripts/optimize-images.js",
    "prepare:media": "node ./scripts/generate-flag-renditions.js",
    "build:css": "npx postcss src/assets/css/tailwind.css -o _site/assets/css/style.css && node scripts/copy-assets.js",
    "build:eleventy": "eleventy",
    "build:wasm": "node ./scripts/build-wasm.js",
    "build:apps": "node scripts/build-apps.js",
    "build": "npm run prepare:media && npm run build:images && npm run build:css && npm run build:eleventy && npm run build:apps",
    "dev": "npm run build:css && eleventy --serve",
    "start": "eleventy --serve",
    "preview": "npm run build && npx http-server _site -p 8080 -c-1",
    "scan:site": "node ./scripts/site-agent.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.11.1",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "markdownlint-cli": "^0.33.0",
    "playwright": "^1.58.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^9.1.0",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^4.1.18",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "alpinejs": "^3.15.8",
    "chokidar": "^3.6.0",
    "lottie-web": "^5.13.0",
    "motion": "^12.33.0"
  },
  "description": "EVIDENT (Evident Technologies, LLC) is a legal-grade e-discovery and evidence processing platform for PDFs, video, audio, and digital media â€” built to help lawyers, clinics, and people drowning in discovery reclaim time and focus. We aim to reduce the friction of litigation and investigations so teams can pursue truth and due process. Because nobody became a lawyer to wrestle PDFs at 2 a.m.",
  "main": ".eleventy.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
