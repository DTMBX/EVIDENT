{
  "name": "barberx-legal-tech",
  "version": "1.0.0",
  "description": "AI-powered legal eDiscovery platform",
  "type": "module",
  "engines": {
    "node": ">=22.19.0"
  },
  "scripts": {
    "setup:agents": "node scripts/setup-copilot-agents.mjs",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "format": "prettier --write '**/*.{js,css,html,json,md}'",
    "format:check": "prettier --check '**/*.{js,css,html,json,md}'",
    "build": "bundle exec jekyll build",
    "build:prod": "bundle exec jekyll build --config _config.yml,_config.prod.yml",
    "serve": "bundle exec jekyll serve",
    "serve:drafts": "bundle exec jekyll serve --drafts",
    "clean": "bundle exec jekyll clean",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "deploy:init": "netlify init",
    "deploy:login": "netlify login",
    "deploy:status": "netlify status",
    "flask:dev": "python run_server.py",
    "flask:prod": "gunicorn -w 4 -b 0.0.0.0:5001 app:app",
    "db:init": "python init_database.py",
    "db:migrate": "flask db upgrade",
    "ai:train": "python train_login_security.py",
    "security:check": "npm audit && pip-audit",
    "precommit": "pre-commit run --all-files"
  },
  "devDependencies": {
    "@copilot-extensions/preview-sdk": "^5.0.1",
    "@playwright/test": "^1.58.0",
    "@popperjs/core": "^2.11.8",
    "@splidejs/splide": "^4.1.4",
    "aos": "^2.3.4",
    "apexcharts": "^5.3.6",
    "autoprefixer": "^10.4.24",
    "chart.js": "^4.5.1",
    "cssnano": "^7.1.2",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.2",
    "gsap": "^3.14.2",
    "html-minifier-terser": "^7.2.0",
    "lodash-es": "^4.17.23",
    "lottie-web": "^5.13.0",
    "lucide": "^0.563.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "quicklink": "^2.3.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "swiper": "^12.1.0",
    "terser": "^5.46.0",
    "tippy.js": "^6.3.7",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
