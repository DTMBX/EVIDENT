# BarberX Legal Technologies - Environment Variables
# Copy this file to .env and fill in your actual values

# Admin Account (REQUIRED for first setup)
ADMIN_EMAIL=admin@barberx.info
ADMIN_PASSWORD=your-secure-password-here

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-use-python-secrets-token-urlsafe
FLASK_DEBUG=0

# Database
DATABASE_URL=sqlite:///barberx.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Security
FORCE_HTTPS=true
SESSION_COOKIE_SECURE=true
REMEMBER_COOKIE_SECURE=true

# Stripe (if using payments)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# API Keys (optional)
OPENAI_API_KEY=sk-your-openai-key-here

# Render.com (for deployment)
RENDER_EXTERNAL_URL=https://your-app.onrender.com
